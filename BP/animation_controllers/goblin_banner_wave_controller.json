{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.wave_controller": {
            "initial_state": "wave_1",
            "states": {
                // Normal Mode Waves
                "wave_1": {
                    "transitions": [
                        {
                            "wave_2": "query.scoreboard('KillCount') == 6" 
                        }
                    ]
                },
                "wave_2": {
                    "transitions": [
                        {
                            "wave_3": "query.scoreboard('KillCount') == 14" 
                        }
                    ],
                    "on_entry": [
                        "/event entity @s wave_2"
                    ]
                },
                "wave_3": {
                    "on_entry": [
                        "/event entity @s wave_3"
                    ]
                },
                "wave_4": {},
                "wave_5": {},
                "wave_6": {},
                "wave_7": {},
                // Hard Mode Waves
                "wave_8": {},
                "wave_9": {},
                "wave_10": {}
            }
        }
    }
}