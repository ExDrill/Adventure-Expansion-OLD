{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.sneaking": {
            "initial_state": "not_sneaking",
            "states": {
                "not_sneaking": {
                    "on_entry": [
                        "/tag @s remove sneaking"
                    ],
                    "transitions": [
                        {
                            "sneaking": "query.is_sneaking"
                        }
                    ]
                },
                "sneaking": {
                    "on_entry": [
                        "/tag @s add sneaking"
                    ],
                    "transitions": [
                        {
                            "not_sneaking": "!query.is_sneaking"
                        }
                    ]
                }
            }
        }
    }
}