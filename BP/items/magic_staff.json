{
	"format_version": "1.16.100",
	"minecraft:item": {
		"description": {
			"identifier": "exdrill:magic_staff"
		},
		"components": {
			"minecraft:display_name": {
				"value": "Magic Staff"
			},
			"minecraft:icon": {
				"texture": "magic_staff"
			},
			"minecraft:durability": {
				"damage_chance": {
					"min": 60,
					"max": 100
				},
				"max_durability": 300
			},
			"minecraft:on_use": {
				"on_use": {
					"event": "on_use",
					"target": "self"
				}
			},
			"minecraft:hand_equipped": true,
			"minecraft:max_stack_size": 1,
			"minecraft:cooldown": {
				"category": "magic_staff",
				"duration": 0.5
			}
		},
		"events": {
			"on_use": {
				"sequence": [
					{
						"damage": {
							"amount": 1,
							"target": "self",
							"type": "all"
						},
						"swing": {},
						"condition": "query.equipped_item_any_tag( 'slot.weapon.offhand', 'exdrill:magic_modifier' )"
					},
					{
						// Energy Harness
						"shoot": {
							"projectile": "exdrill:energy",
							"launch_power": 1
						},
						"run_command": {
							"command": [
								"playsound random.orb @s"
							]
						},
						"condition": "query.get_equipped_item_name(1) == 'energy_harness'"
					},
					{
						// Soul Vase
						"shoot": {
							"projectile": "exdrill:rapid_soul",
							"launch_power": 3
						},
						"condition": "query.get_equipped_item_name(1) == 'soul_vase'"
					},
					{
						// Crimson Torch
						"shoot": {
							"projectile": "exdrill:fireball",
							"launch_power": 0.5
						},
						"condition": "query.get_equipped_item_name(1) == 'crimson_torch'"
					}
				]
			}
		}
	}
}
