{
	"format_version": "1.10.0",
	"minecraft:client_entity": {
		"description": {
			"identifier": "exdrill:friendly_blockling",
			"materials": {
				"default": "wolf",
				"chest": "entity_alphatest"
			},
			"textures": {
				"default": "textures/entity/blockling",
				"chest": "textures/entity/blockling_chest"
			},
			"geometry": {
				"default": "geometry.blockling",
				"chest": "geometry.blockling_chest"
			},
			"animations": {
				"walk": "animation.blockling.walk",
				"look_at_target": "animation.common.look_at_target",
				"sit": "animation.blockling.sit"
			},
			"scripts": {
				"animate": [
					{
						"walk": "query.modified_move_speed * 2"
					},
					"look_at_target",
					{
						"sit": "query.is_sitting"
					}
				]
			},
			"render_controllers": [
				"controller.render.default",
				{
					"controller.render.blockling_chest": "query.variant == 1"
				}
			],
			"spawn_egg": {
				"texture_index": 0,
				"base_color": "#FFFFFF",
				"overlay_color": "#595959"
			}
		}
	}
}